<html>
  <head>
    <%- include('./partials/head', {title: title}); %>
  </head>
  <body>
    <header>
      <%- include('./partials/header'); %>
    </header>
    <main>
      <form action='' method='POST'>
        <div class='form-container'>
            <h2>New Post</h2>
            <div class='form-section'>
                <label for='title'>Title:</label>
